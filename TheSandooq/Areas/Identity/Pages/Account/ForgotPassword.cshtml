@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "استعادة كلمة المرور";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="container d-flex justify-content-center align-items-center" style="min-height: 60vh;">
    <div class="col-md-12 shadow p-4 rounded bg-white">
        <h4 class="text-center">أدخل بريدك الإلكتروني</h4>
        <form method="post">
            <!-- Validation Summary -->
            <div asp-validation-summary="ModelOnly" class="text-danger text-center" role="alert"></div>

            <!-- Email Input -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label">البريد الإلكتروني</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">إعادة تعيين كلمة المرور</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background-color: #f3f4f6; /* Light background color */
        direction: rtl; /* Right to Left layout for Arabic */
        text-align: right; /* Align text to the right */
        overflow: hidden; /* Prevent scrolling */
    }

    .shadow {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow for form container */
    }

    .container {
        max-width: 400px; /* Limit the width for compact form display */
    }
</style>
